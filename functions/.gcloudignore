# Google Cloud Functions ignore file
# This file specifies files that should NOT be uploaded to Google Cloud

# Node.js dependencies
node_modules/
npm-debug.log
yarn-error.log

# Build artifacts and caches (but keep .next for nextServer function)
lib/
out/
build/
dist/

# Next.js cache and unnecessary files (these can be huge and not needed for functions)
.next/cache/
.next/trace
.next/server/app/**/*.rsc
.next/server/**/*.meta
.next/static/chunks/**/*.map
.next/static/**/*.map
.next/server/**/*.map

# Large static assets that aren't needed for SSR
.next/static/media/
.next/static/chunks/webpack-*
.next/static/chunks/pages/_app-*.js.map
.next/static/chunks/pages/_document-*.js.map

# Source files (only compiled JS should be deployed)
src/
*.ts
!lib/**/*.js

# Development files
*.map
*.log
logs/

# Environment files
.env*
!.env.production

# Firebase files
.firebase/
firebase-debug*.log
.firebaserc

# Git and version control
.git/
.gitignore
README.md
CHANGELOG.md

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

