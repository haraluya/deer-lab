rules_version = '2';

// 允許讀取所有文件
service firebase.storage {
  match /b/{bucket}/o {
    // 允許讀取所有文件
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // 允許上傳到工單和採購單的評論路徑
    match /work-orders/{workOrderId}/comments/{allPaths=**} {
      allow write: if true;
    }
    
    match /purchase-orders/{purchaseOrderId}/comments/{allPaths=**} {
      allow write: if true;
    }
    
    // 允許上傳到其他上傳路徑
    match /uploads/{allPaths=**} {
      allow write: if true;
    }
  }
}

// Firestore 安全規則
service cloud.firestore {
  match /databases/{database}/documents {
    // 庫存紀錄集合權限
    match /inventory_records/{document} {
      // 所有已認證用戶可以讀取
      allow read: if request.auth != null;
      // 只有已認證用戶可以建立和更新
      allow create, update: if request.auth != null;
      // 不允許刪除（保持審計軌跡）
      allow delete: if false;
    }
    
    // 其他集合保持原有權限
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
